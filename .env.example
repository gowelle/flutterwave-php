# Flutterwave API Credentials
# Get these from your Flutterwave dashboard under Settings > API
FLUTTERWAVE_CLIENT_ID=your_client_id_here
FLUTTERWAVE_CLIENT_SECRET=your_client_secret_here
FLUTTERWAVE_SECRET_HASH=your_secret_hash_here

# Flutterwave Environment
# Options: staging, production
FLUTTERWAVE_ENVIRONMENT=staging

# API Settings
# Timeout in seconds
FLUTTERWAVE_TIMEOUT=30
# Maximum number of retry attempts
FLUTTERWAVE_MAX_RETRIES=3
# Retry delay in milliseconds
FLUTTERWAVE_RETRY_DELAY=1000

# Rate Limiting
FLUTTERWAVE_RATE_LIMIT_ENABLED=true
FLUTTERWAVE_RATE_LIMIT_MAX=100
FLUTTERWAVE_RATE_LIMIT_WINDOW=60

# Logging
FLUTTERWAVE_LOGGING_ENABLED=true
FLUTTERWAVE_LOG_CHANNEL=stack
FLUTTERWAVE_LOG_LEVEL=info
FLUTTERWAVE_LOG_REQUESTS=false
FLUTTERWAVE_LOG_RESPONSES=false

# Webhook Settings
FLUTTERWAVE_WEBHOOK_VERIFY=true
FLUTTERWAVE_WEBHOOK_PATH=webhooks/flutterwave

# Default Currency
# The default currency to use for transactions if not specified
FLUTTERWAVE_DEFAULT_CURRENCY=TZS

# Charge Sessions
# Number of days before cleaning up old charge sessions
FLUTTERWAVE_SESSION_CLEANUP_DAYS=30
# Automatically create charge sessions when direct charges are created
FLUTTERWAVE_SESSION_AUTO_CREATE=false
# Maximum number of polling attempts for charge status
FLUTTERWAVE_SESSION_MAX_POLLS=60

# Cache Settings
FLUTTERWAVE_CACHE_ENABLED=true

# Model Classes
# Optional - only needed if using ChargeSession relationships
# Fully qualified class names of your application's User and Payment models
FLUTTERWAVE_USER_MODEL=App\Models\User
FLUTTERWAVE_PAYMENT_MODEL=App\Domain\Payment\Models\Payment