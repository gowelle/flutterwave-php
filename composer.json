{
    "name": "gowelle/flutterwave-php",
    "version": "1.0.0",
    "description": "Modern Laravel package for Flutterwave v4 API integration",
    "keywords": [
        "flutterwave",
        "payment",
        "laravel",
        "mobile-money",
        "africa",
        "payments"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Gowelle",
            "email": "dev@gowelle.codes"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0",
        "illuminate/http": "^11.0",
        "illuminate/database": "^11.0",
        "illuminate/contracts": "^11.0",
        "illuminate/validation": "^11.0"
    },
    "require-dev": {
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/phpstan": "^1.10",
        "laravel/pint": "^1.13"
    },
    "autoload": {
        "psr-4": {
            "Gowelle\\Flutterwave\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gowelle\\Flutterwave\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=512M"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Gowelle\\Flutterwave\\FlutterwaveServiceProvider"
            ],
            "aliases": {
                "Flutterwave": "Gowelle\\Flutterwave\\Facades\\Flutterwave"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}